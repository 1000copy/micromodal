{
  "name": "micromodal",
  "version": "0.1.0",
  "description": "Tiny javascript library for creating accessible modal dialogs",
  "main": "src/index.js",
  "module": "src/index.js",
  "scripts": {
    "start": "echo \"Hello\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "styles:dev": "postcss example/assets/styles/style.css -c -o example/site.min.css -w",
    "styles:build": "NODE_ENV=production postcss example/assets/styles/style.css -c -o example/site.min.css",
    "scripts:dev": "rollup -c -w",
    "scripts:build": "NODE_ENV=production rollup -c",
    "scripts:demo": "minify dist/micromodal.js example/assets/scripts/prism.js --output example/site.min.js",
    "livereload": "reload -b -s --dir example --port 5000",
    "build": "rollup -c && minify dist/micromodal.js",
    "dev": "concurrently \"yarn scripts:dev\" \"yarn styles:dev\"  \"yarn scripts:demo\" \"yarn livereload\"",
    "precommit": "yarn build"
  },
  "keywords": [
    "a11y",
    "modal",
    "accesible"
  ],
  "author": "Indrashish Ghosh",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-latest": "^6.24.1",
    "concurrently": "^3.5.0",
    "cssnano": "^3.10.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "minifier": "^0.8.1",
    "postcss-cli": "^4.1.1",
    "postcss-import": "^11.0.0",
    "postcss-scss": "^1.0.2",
    "reload": "^2.2.1",
    "rollup": "^0.49.2",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-watch": "^4.3.1",
    "tachyons": "^4.8.1"
  }
}
